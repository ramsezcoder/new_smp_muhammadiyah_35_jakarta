# Apache Configuration for React + Vite SPA in /smpmuh/ subfolder
# Deploy this file inside public_html/smpmuh/ directory

<IfModule mod_rewrite.c>
  # Enable rewrite engine
  RewriteEngine On
  
  # Set base path to /smpmuh/ subfolder
  RewriteBase /smpmuh/
  
  # Prevent redirect loops - skip if already requesting index.html
  RewriteCond %{REQUEST_URI} ^/smpmuh/index\.html$ [NC]
  RewriteRule ^ - [L]
  
  # Allow direct access to existing files (CSS, JS, images, fonts, etc.)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Route all other requests to index.html for client-side routing
  # Preserve query strings with QSA flag
  RewriteRule ^(.*)$ index.html [QSA,L]
</IfModule>

# Disable directory browsing
Options -Indexes

# Set default index file
DirectoryIndex index.html

# Security Headers
<IfModule mod_headers.c>
  # Prevent MIME type sniffing
  Header always set X-Content-Type-Options "nosniff"
  
  # Enable XSS protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Prevent clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Referrer policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Permissions policy
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# MIME Types for common file extensions
<IfModule mod_mime.c>
  AddType text/html .html
  AddType text/css .css
  AddType application/javascript .js .mjs
  AddType application/json .json
  AddType image/svg+xml .svg .svgz
  AddType image/webp .webp
  AddType image/avif .avif
  AddType font/woff2 .woff2
  AddType font/woff .woff
  AddType font/ttf .ttf
  AddType application/pdf .pdf
  AddType video/mp4 .mp4
  AddType video/webm .webm
</IfModule>

# Enable compression for better performance
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# Browser caching for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  
  # HTML - no cache for index.html (SPA entry point)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# UTF-8 encoding
AddDefaultCharset UTF-8

# Prevent access to sensitive files
<FilesMatch "(^\.htaccess|\.env|\.git|package\.json|vite\.config\.js)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>
